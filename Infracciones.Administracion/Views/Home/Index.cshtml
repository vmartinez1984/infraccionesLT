@model Infracciones.Dto.UsuarioDeInicioDeSesion
@{
    Layout = null;
    ViewBag.Title = "Inicio de sesión";
}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Víctor Mtz">
    <link rel="shortcut icon" href="~/Imagenes/favicon.ico" />

    <title>Infracciones | Inicio de sesión</title>

    <!-- Custom fonts for this template -->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/Content/sb-admin-2.css" rel="stylesheet">

    <!-- Custom styles for this page -->
    <link href="~/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <br />
                                        <br />
                                        <br />
                                        <br />
                                        <h1 class="h4 text-gray-900 mb-4">Bienvenido</h1>
                                    </div>
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="form-group">
                                            @Html.EditorFor(model => model.Usuario, new { htmlAttributes = new { @class = "form-control form-control-user", placeholder = "Usuario", maxlength = "20", autofocus = string.Empty } })
                                            @Html.ValidationMessageFor(model => model.Usuario, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            @Html.PasswordFor(model => model.Contrasenia, new { @class = "form-control form-control-user", placeholder = "Contraseña", maxlength = "20" })
                                            @Html.ValidationMessageFor(model => model.Contrasenia, "", new { @class = "text-danger" })
                                        </div>

                                        if (!string.IsNullOrEmpty(ViewBag.Error))
                                        {
                                            <div class="text-danger">
                                                @ViewBag.Error
                                            </div>
                                        }
                                        <br />
                                        <input type="submit" value="Iniciar sesión" class="btn btn-primary btn-user btn-block" />
                                    }
                                    <hr>
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>

    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Scripts/sb-admin-2.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")

</body>
</html>