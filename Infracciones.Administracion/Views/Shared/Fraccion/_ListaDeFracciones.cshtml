@model IEnumerable<Infracciones.Dto.Fraccion>
<div class="container-fluid">
    <h3>Lista de fracciones</h3>
    <p>
        @Html.ActionLink("Agregar", $"Create/{ViewBag.ArticuloId}", "Fraccion")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaDeRegistro)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Numero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaDeRegistro)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", "Fraccion", new { id = item.Id }, null) |
                    @*@Html.ActionLink("Editar", "Edit", "Fraccion", new { id = item.Id }, new { @class = "btn btn-success" }) |*@
                    @Html.ActionLink("Detalles", "Details", "Fraccion", new { id = item.Id }, null) |
                    @Html.ActionLink("Borrar", "Delete", "Fraccion", new { id = item.Id }, null)
                </td>
            </tr>
        }

    </table>

</div>